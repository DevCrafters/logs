{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2018", "esnext.array"],
    "allowJs": false,

    "outDir": "./dist",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "esModuleInterop": true,

    "typeRoots": ["node_modules/@types", "src/custom-typings"]
  }
}
